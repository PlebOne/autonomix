<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.plebone.autonomix</id>
  <name>Autonomix</name>
  <summary>GitHub Release Manager for Linux</summary>
  <metadata_license>MIT</metadata_license>
  <project_license>MIT</project_license>
  <developer_name>PlebOne</developer_name>
  
  <description>
    <p>
      Autonomix is a Linux package manager for GitHub releases, similar to Obtainium for Android.
      It allows you to track GitHub repositories and install their releases directly.
    </p>
    <p>Features:</p>
    <ul>
      <li>Track GitHub releases from any repository</li>
      <li>Install .deb, .rpm, AppImage, Flatpak, and Snap packages</li>
      <li>Check for updates with one click</li>
      <li>Self-updates included</li>
    </ul>
  </description>
  
  <launchable type="desktop-id">io.github.plebone.autonomix.desktop</launchable>
  
  <url type="homepage">https://github.com/PlebOne/autonomix</url>
  <url type="bugtracker">https://github.com/PlebOne/autonomix/issues</url>
  
  <provides>
    <binary>autonomix</binary>
  </provides>
  
  <categories>
    <category>Utility</category>
    <category>PackageManager</category>
  </categories>
  
  <keywords>
    <keyword>github</keyword>
    <keyword>releases</keyword>
    <keyword>packages</keyword>
    <keyword>updates</keyword>
    <keyword>package manager</keyword>
  </keywords>
  
